@model Department
@{
    ViewData["Title"] = "ShowCourses";
}

<h1>ShowCourses</h1>

<table class="table table-bordered">
    <tr>
        <th>Cours Name</th>
        <th>Duration</th>
        <th></th>
    </tr>
    @foreach (var item in Model.Courses)
    {
        <tr>
            <td> @item.Crs_Name</td>
            <td>
                @(item.Lect_Hours + item.Lab_Hours)
            </td>
            <td>
                <a asp-action="UpdatStudentDegree" asp-route-id="@Model.DeptId" asp-route-crsId="@item.Crs_Id"> Update Student Degree</a>
            </td>
        </tr>
    }
</table>

